generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int        @id @unique @default(autoincrement())
  firstName  String
  lastName   String
  email      String     @unique
  password   String
  Book       Book[]
  authors    Author[]
  categories Category[]
}

model Author {
  id        Int    @id @unique @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  country   String
  userId    Int
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  books     Book[]
}

model Category {
  id     Int    @id @unique @default(autoincrement())
  name   String @unique
  books  Book[]
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Book {
  id         Int      @id @unique @default(autoincrement())
  title      String
  isbn       String
  pub_year   String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int
  authorId   Int
  author     Author   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
